@model List<ABCRetailers.Models.UploadedDocument>
@{
    ViewData["Title"] = "Uploaded Documents";
}

<style>
    body {
        background: linear-gradient(135deg, #0d1117 0%, #1a1f2e 100%);
        color: #e6edf3;
    }

    .card {
        background: rgba(22, 27, 34, 0.8);
        border: 1px solid rgba(88, 166, 255, 0.2);
        border-radius: 16px;
        backdrop-filter: blur(10px);
    }

    .table {
        color: #e6edf3;
    }

        .table thead {
            background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
            color: white;
        }

        .table tbody tr {
            border-bottom: 1px solid rgba(88, 166, 255, 0.1);
            transition: all 0.3s ease;
        }

    .table-hover tbody tr:hover {
        background: linear-gradient(90deg, rgba(13, 110, 253, 0.15), rgba(13, 202, 240, 0.15));
    }

    .badge-customer {
        background: rgba(13, 110, 253, 0.2);
        color: #58a6ff;
        padding: 0.4rem 0.8rem;
        border-radius: 8px;
    }

    code {
        background: rgba(13, 110, 253, 0.2);
        color: #58a6ff;
        padding: 0.3rem 0.6rem;
        border-radius: 6px;
        font-size: 0.85rem;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-upload me-2"></i> Uploaded Documents</h2>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card p-3">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date Uploaded</th>
                            <th>File Name</th>
                            <th>Customer</th>
                            <th>Order ID</th>
                            <th>File Size</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model)
                        {
                            <tr>
                                <td>@doc.UploadedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    <i class="fas fa-file-pdf text-danger me-2"></i>
                                    @doc.FileName
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(doc.CustomerName))
                                    {
                                        <span class="badge-customer">@doc.CustomerName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unknown</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(doc.OrderId))
                                    {
                                        <code>@doc.OrderId.Substring(0, Math.Min(8, doc.OrderId.Length))...</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@(doc.FileSize / 1024) KB</td>
                                <td>
                                    <a href="@doc.BlobUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> No documents uploaded yet.
        </div>
    }
</div>