@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="mt-4">
    <h2>Welcome, @User.Identity?.Name!</h2>
    <p class="text-muted">You are logged in as an <strong>Administrator</strong>.</p>

    <div class="list-group mt-4">
        <a asp-controller="Customer" asp-action="Index" class="list-group-item list-group-item-action">
            Manage Customers
        </a>
        <a asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action">
            Manage Products
        </a>
        <a asp-controller="Order" asp-action="Index" class="list-group-item list-group-item-action">
            View & Process Orders
        </a>
        <a asp-controller="Upload" asp-action="Index" class="list-group-item list-group-item-action">
            View Uploaded Files
        </a>
        <a asp-controller="Home" asp-action="Privacy" class="list-group-item list-group-item-action">
            Manage Privacy Policy
        </a>
    </div>
</div>
